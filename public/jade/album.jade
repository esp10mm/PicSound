doctype html
html
  head
    title Album
    meta(charset='utf-8')
    link(href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css')
    link(href="css/semantic.css" rel="stylesheet" type="text/css")
    link(href="css/album.css" rel="stylesheet" type="text/css")
  body
    div(class="ui inverted main menu")
      a(class="item" href="/")
        i(class="home icon")
        |Home
      a(class="item" href="/albums")
        i(class="photo icon")
        |Albums
      a(class="item")
        i(class="globe icon")
        |Browse
      div(class="right menu")
        div(class="item")
          div(class="ui icon input")
            input(type="text" placeholder="Search...")
            i(class="search link icon")

    div(class="ui main segment")
      div(class="ui grid")
        //- left side managing segment
        div(class="seven wide column")
          div(class="ui secondary left floated manage segment",id="album_manage")
            //- tab menu
            div(class="ui tabular tag_song menu")
              a(class="active item" tab='0')
                |Tags
              a(class="item" tab='1')
                |Song
              a(class="item" tab='2')
                |Recommend
            //- tag browse tab
            div(class="ui basic segment tag tab0")
              div(class="ui basic disp segment" id="tags")
              div(class="ui small icon button" data-html='New Tag : <br><div class="ui mini input"><input type="text" id="newTag"></div>&nbsp;<div class="ui mini button" onclick="newTag()">OK</div>')
                i(class="add icon")
            //- recommended song tab
            div(class="ui inactive basic raised segment song tab1")
              div(class="ui basic song segment" id="songs")
              div(class="ui pagination song page menu" id="song_page")
              | &nbsp; &nbsp; &nbsp;
              div(class="ui icon button songRefresh")
                i(class="refresh icon")
            //- recommending tab
            div(class="ui inactive basic raised segment recommend tab2")
              div(class="ui input")
                input(type="text" placeholder="type some song name ..." id="recInput")
              | &nbsp;
              i(class="inactive big spinner loading icon" id="songSearchLoading")
              div(class="ui basic segment" id="recResult")
        //- right album displaying segment
        div(class="nine wide column")
          div(class="ui secondary right floated stacked album segment")
            div(class= "ui album basic disp segment")
            div(class= "ui control basic segment")
              div(class="ui compact labeled icon album button")
                i(class="play icon")
                |Slideshow

        div(class="ui fullscreen slide basic modal")


    script(src="javascript/jquery-1.11.1.min.js" type="text/javascript")
    script(src="javascript/semantic.js" type="text/javascript")
    script(src="javascript/album.js" type="text/javascript")
